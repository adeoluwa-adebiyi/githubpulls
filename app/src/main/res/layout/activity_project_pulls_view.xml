<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.githubproject.githubpulls.ProjectPullsViewActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pulls_section_header">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulls"
            android:padding="10dp"/>
    </android.support.v7.widget.CardView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pulls_section_header"
        android:id="@+id/pulls_view"
        android:background="#ccc"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="10dp"
        android:paddingBottom="0dp"
        android:visibility="invisible">
    </ListView>
    <ProgressBar
        android:layout_below="@id/pulls_section_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/second_progress"/>

</RelativeLayout>
